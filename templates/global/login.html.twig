{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block monTitre %}Connexion{% endblock %}


{% block body %}
{% for message in app.flashes('success') %}
<div class="alert alert-success">
    {{message}}
</div>
{% endfor %}
{% for message in app.flashes('danger') %}
        {{ message }}
{% endfor %}
{% for message in app.flashes('warning') %}
        {{ message }}
{% endfor %}

{% if error %}
    <div class="alert alert-danger">
        Le login et/ou le mot de passe sont incorrects.
    </div>
{% endif %}
<form action="{{path('login')}}" method="post">
    <div class="form-group">
        <label>Login : </label>
        <input type="text" required name="_username" class="form-control" value="{{lastUserName}}">
    </div>
    <div class="form-group">
        <label>Password : </label>
        <input type="password" required name="_password" class="form-control">
    </div>
    <input type="submit" class="btn btn-primary" value="s'identifier">
</form>
<div class="forgotten_password">
    <a href="{{path('app_forgotten_password')}}">Mot de passe oubli√©</a>
</div>

{% endblock %}
