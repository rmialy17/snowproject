            <![endif]-->
        
            <script type="text/javascript">
                $(document).ready(function(){
                   'use strict';
                jQuery('#headerwrap').backstretch([
                  "assets/img/bg/bg1.jpg",
                  "assets/img/bg/bg2.jpg",
                  "assets/img/bg/bg3.jpg"
                ], {duration: 8000, fade: 500});
        
                $("#mapwrapper").gMap({ controls: false,
                    scrollwheel: false,
                    markers: [{     
                        latitude:40.7566,
